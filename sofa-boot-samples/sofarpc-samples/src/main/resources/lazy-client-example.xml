<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">

    <sofa:reference jvm-first="false" id="lazyServiceReferenceBolt" interface="com.alipay.sofa.rpc.samples.lazy.LazyService">
        <sofa:binding.bolt>
            <sofa:global-attrs lazy="true"/>
        </sofa:binding.bolt>
    </sofa:reference>

    <sofa:reference jvm-first="false" id="lazyServiceReferenceDubbo" interface="com.alipay.sofa.rpc.samples.lazy.LazyService">
        <sofa:binding.dubbo>
            <sofa:global-attrs lazy="true"/>
        </sofa:binding.dubbo>
    </sofa:reference>
</beans>